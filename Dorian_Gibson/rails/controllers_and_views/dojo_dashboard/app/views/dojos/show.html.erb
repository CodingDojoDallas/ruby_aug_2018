<div class = 'col-8 Absolute-Center is-Responsive'>
    <h1><%= @dojo.branch %></h1>

    <h2><%= @dojo.street %></h2>
    <h2>City: <%= @dojo.city %> State: <%= @dojo.state %></h2>

    <h1>Student Roster</h1>
    <table class='table table-striped text-center'>
        <thead class='thead-dark'>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @students.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td>
                    <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>' class='btn btn-outline-dark mr-1'>Show</a>
                    <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit' class='btn btn-outline-dark mr-2'>Edit</a>
                    <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>' data-method="delete" class='btn btn-outline-dark mr-1'>Destroy</a>
                </td>
            </tr>
            <% end %>  
        </tbody>
    </table>
    <a href='/dojos/<%= @dojo.id %>/students/new' class='btn btn-dark'>New Student</a>
</div>
