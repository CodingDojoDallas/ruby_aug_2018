<div class="container">

    <% if notice %>
    <p id="notice"><%= notice %></p>
    <% end %>

    <h2>Listing <span class="white-text"><%= @alldojos.count %></span> Dojos</h2>

    <table class="highlight">
        <thead>
        <tr>
            <th class="theader">Coding Dojo Branch</th>
            <th class="theader">Street            </th>
            <th class="theader">City              </th>
            <th class="theader">State             </th>
            <th class="theader">Actions           </th>
        </tr>
        </thead>
        <tbody>
            <div>
                <% @alldojos.each do |dojo| %>
                <tr class="trbody">
                    <td><%= dojo.branch %></td>
                    <td><%= dojo.street %></td>
                    <td><%= dojo.city   %></td>
                    <td><%= dojo.state  %></td>
                    <td class="">
                        <a class="btn-small sn show" href="/dojos/<%= dojo.id %>"> Show</a>
                        <a class="btn-small sn edit" href="/dojos/<%= dojo.id %>/edit" %>Edit</a>
                        <form action="/dojos/<%= dojo.id %>" method="post">
                            <input type="hidden" name="_method" value="delete" />
                            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                            <input type="submit" value="Delete" class="btn-small sn delete">
                        </form>
                    </td>
                </tr>
                <% end %>
            </div>
        </tbody>
    </table>

    <button class="btn sn"><%= link_to 'New Dojo', dojos_new_path %></button>

</div>