
<!-- Main container -->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4 mt-5">
            <h1 class="primary">Dojo Survey</h1>
            <form class="form-horizontal" action="user/submitsurvey" method="POST">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <div class="form-group">
                    <label class="control-label col-xs-6" for="name">Name: </label>
                    <input type="text" class="form-control col-xs-6" name="survey[name]" placeholder="Fullname">
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-6">Dojo Locations: </label>
                    <select class="form-control primary col-xs-6" name="survey[location]">
                    <option>Mountain View</option>
                    <option>Dallas</option>
                    <option>Seattle</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-6">Favorite Language: </label>
                    <select class="form-control primary col-xs-6" name="survey[language]">
                    <option>Javascript</option>
                    <option>Ruby</option>
                    <option>Python</option>
                    <option>Java</option>
                    <option>c/c++</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-6">Comment <span style="color:#eee;">(Optional)</span>: </label>
                    <textarea class="form-control primary col-xs-6" name="survey[comment]" rows="5"></textarea>
                </div>
                <div class="form-group submit">
                    <button type="submit" class="btn btn-default">Submit</button>
                    <!-- <button type="submit" class="btn btn-default btn-primary active">Submit</button> -->
                </div>
            </form>
        </div>
    </div>
</div>