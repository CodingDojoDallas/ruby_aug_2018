<div class="container">

    <% if notice %>
    <p id="notice"><%= notice %></p>
    <% end %>

    <h3>Here Are Some Of the Events At your State. </h3>

    <table class="highlight">
        <thead>
        <tr>
            <th class="theader">Name          </th>
            <th class="theader">Date          </th>
            <th class="theader">Location      </th>
            <th class="theader">Host          </th>
            <th class="theader">Actions/Status</th>
        </tr>
        </thead>
        <tbody>
            <div>
                <% @events.each do |event| %>
                <tr class="trbody">
                    <td><%= event.name %>           </td>
                    <td><%= event.date %>           </td>
                    <td><%= event.city %>           </td>
                    <td><%= event.state %>          </td>
                    <td><%= event.user.first_name %></td>
                    <td class="">
                        <a class="btn-small sn show" href="/events/<%= event.id %>"> Join</a>
                        <a class="btn-small sn edit" href="/events/<%= event.id %>/edit" %>Edit</a>
                        <form action="/events/<%= event.id %>" method="post">
                            <input type="hidden" name="_method" value="delete" />
                            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                            <input type="submit" value="Delete" class="btn-small sn delete">
                        </form>
                    </td>
                </tr>
                <% end %>
            </div>
        </tbody>
    </table>
</div>

