<h1> <%= @dojo.branch %></h1>

<p> Address: <%= @dojo.street %> </p>
<p> City: <%= @dojo.city %> </p>
<p> State: <%= @dojo.state %> </p>

<h2>Student Roster</h2>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
      <td>
        <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a>
        <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a>
        <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete">Destroy</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="/dojos">Home &#8739; </a>
<a href="/dojos/<%= @dojo.id %>/edit">Edit &#8739;</a>
<a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>
