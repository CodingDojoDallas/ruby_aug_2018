<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>
<% if flash[:notice] %>
  <% for message in flash[:notice] %>
    <p><%= message %></p>
  <% end %>
<% end %>
<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">
    <input type="text" name="student[first_name]" placeholder="First Name" value="<%= @student.first_name %>">
    <input type="text" name="student[last_name]" placeholder="Last Name" value="<%= @student.last_name %>">
    <input type="text" name="student[email]" placeholder="Email" value="<%= @student.email %>">
    <select name="student[dojo_id]">
      <option value="<%= @dojo.id %>"><%= @dojo.branch %></option>
      <% @all_dojos.each do |dojo| %>
        <option value="<%= dojo.id %>"><%= dojo.branch %></option>
      <% end %>
    </select>
    <input type="submit" value="Update">
</form>

<a href="/dojos">Home &#8739; </a>
<a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>"><%= @student.first_name %> &#8739; </a>
