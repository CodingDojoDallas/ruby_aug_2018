<% content_for :left_column do %>
  <h1>All Users</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Favorite Language</th>
      </tr>
    </thead>
    <tbody>
      <% @all_users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.language %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% content_for :right_column do %>
  <% if flash[:notice] %>
    <% flash[:notice].each do |message| %>
      <p class="alert alert-danger"><%= message %></p>
    <% end %>
  <% end %>
  <h1>New User</h1>
  <form action="/" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group">
      <label for="fname">First name</label>
      <input type="text" name="user[first_name]" id="fname" class="form-control">
    </div>
    <div class="form-group">
      <label for="lname">Last name</label>
      <input type="text" name="user[last_name]" id="lname" class="form-control">
    </div>
    <div class="form-group">
      <label for="lang">Favorite Language</label>
      <input type="text" name="user[language]" id="lang" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <a href="/posts" class="mt-3 text-white btn btn-secondary">All Posts</a>
<% end %>
